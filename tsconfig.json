{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "lib": ["es2015"],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "src/svelte/**/*",
        "src/examples/**/*"
    ]
}
